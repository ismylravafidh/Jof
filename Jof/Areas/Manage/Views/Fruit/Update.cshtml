@using Jof.Areas.Manage.ViewModels
@model FruitUpdateVm
<div class="container">
    <h1>Update Fruit</h1>
</div>
<form method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control" placeholder="Enter Fruit Name">
        <span asp-validation-for="Name" style="color:red"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <input asp-for="Description" class="form-control" placeholder="Enter Fruit Description">
        <span asp-validation-for="Description" style="color:red"></span>
    </div>
    <div class="form-group">
        <label asp-for="Image" class="form-label">Image</label>
        <input asp-for="Image" class="form-control" placeholder="Enter Fruit Image">
        <span asp-validation-for="Image" style="color:red"></span>
    </div>

    <button type="submit" class="btn btn-primary" asp-action="Update" asp-controller="Fruit">Submit</button>
</form>